<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="chameleon" _name="Chameleon" version="1.0">

  <author>Jason Hartt</author>
  <_description>Dark color scheme with blue-green palette</_description>

  <!-- Colour Palette -->
  <color name="charcoal1"                   value="#2a2a2a"/>
  <color name="charcoal2"                   value="#1a1a1a"/>
  <color name="graycloud1"                  value="#e6e6e6"/>
  <color name="graycloud2"                  value="#a6a6a6"/>
  <color name="graycloud3"                  value="#929292"/>
  <color name="graycloud4"                  value="#494949"/>
  <color name="honeybell"                   value="#f5c71a"/>
  <color name="keylime"                     value="#e8f48c"/>
  <color name="matcha1"                     value="#c8cbae"/>
  <color name="matcha2"                     value="#a8ad7f"/>
  <color name="matcha3"                     value="#9ec1a2"/>
  <color name="palemoon1"                   value="#955f8e"/>
  <color name="palemoon2"                   value="#b58bb0"/>
  <color name="scarletred"                  value="#cc0000"/>
  <color name="skyblue1"                    value="#b3b3ff"/>
  <color name="skyblue2"                    value="#8080ff"/>
  <color name="yellow"                      value="#ffff00"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="graycloud1" background="charcoal1"/>
  <style name="selection"                   foreground="graycloud1" background="graycloud4"/>
  <style name="cursor"                      foreground="graycloud1"/>
  <style name="secondary-cursor"            foreground="graycloud2"/>
  <style name="current-line"                background="charcoal2"/>
  <style name="line-numbers"                foreground="graycloud2" background="charcoal2"/>
  <style name="draw-spaces"                 foreground="graycloud2"/>
  <style name="background-pattern"          background="charcoal2"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="yellow" bold="true"/>
  <style name="bracket-mismatch"            foreground="graycloud2" background="scarletred"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="graycloud2" background="graycloud3"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="charcoal1" background="matcha3" bold="true"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="graycloud3"/>
  <style name="def:shebang"                 foreground="graycloud2" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="skyblue2"/>
  <style name="def:string"                  foreground="matcha3"/>
  <style name="def:special-char"            foreground="palemoon2"/>
  <style name="def:special-constant"        foreground="palemoon2"/>
  <style name="def:floating-point"          foreground="palemoon1"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="skyblue2"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="skyblue1"/>

  <!-- Types -->
  <style name="def:type"                    foreground="matcha2" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="matcha3"/>
  <style name="def:error"                   foreground="graycloud1" background="scarletred" bold="true"/>          
  <style name="def:warning"                 foreground="honeybell" background="charcoal2" bold="true"/>
  <style name="def:note"                    foreground="palemoon2" background="charcoal2"/>
  <style name="def:underlined"              italic="true" underline="single"/>

  <!-- Language Specific -->
  <style name="diff:added-line"             foreground="keylime"/>
  <style name="diff:removed-line"           foreground="honeybell"/>
  <style name="diff:changed-line"           foreground="palemoon2" bold="true"/>
  <style name="diff:diff-file"              foreground="honeybell" bold="true"/>
  <style name="diff:location"               foreground="matcha1"/>
  <style name="diff:special-case"           foreground="palemoon1" bold="true"/>

  <style name="latex:command"               foreground="matcha1" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>

</style-scheme>
